{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start",
      "runOptions": {
        "instanceLimit": 3,
        "reevaluateOnRerun": true
      },
      "type": "shell",
      "command": "dotnet",
      "args": ["run", "--project", "\"${fileDirname}\""],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
