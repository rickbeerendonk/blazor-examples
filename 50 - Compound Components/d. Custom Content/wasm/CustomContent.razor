<h2>
    <u>Hi @Name!</u>
</h2>

@code {
    [CascadingParameter(Name = "Name")]
    public required string? Name { get; set; }

    protected override void OnInitialized()
    {
        if (Name == null)
        {
            throw new InvalidOperationException("Compound component CustomContent rendered outside GreetingEditor");
        }
    }
}
