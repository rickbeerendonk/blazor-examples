<input @oninput="HandleChange">

<Child @ref="child" />

@code {
  private Child? child;

  private void HandleChange(ChangeEventArgs e)
  {
    Console.WriteLine(e.Value?.ToString());
    if (child != null)
    {
      child.Name = e.Value?.ToString();
    }
  }
}