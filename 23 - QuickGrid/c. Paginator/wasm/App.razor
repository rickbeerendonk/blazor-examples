<!-- Add package reference to Microsoft.AspNetCore.Components.QuickGrid -->

<QuickGrid Items="@words" Pagination="@pagination">
    <PropertyColumn Property="@(w => w.Id)" />
    <PropertyColumn Property="@(w => w.Dutch)" />
    <PropertyColumn Property="@(w => w.Danish)" />
    <PropertyColumn Property="@(w => w.English)" />
    <PropertyColumn Property="@(w => w.Norwegian)" />
</QuickGrid>
<hr />
<Paginator State="pagination" />

@code {
    record Word(int Id, string Dutch, string Danish, string English, string Norwegian);

    readonly IQueryable<Word> words = new Word[]
    {
        new (1, "hallo", "hej", "hello", "hallo"),
        new (2, "goedemorgen", "godmorgen", "good morning", "god morgen"),
        new (3, "goedemiddag", "god eftermiddag", "good afternoon", "god ettermiddag"),
        new (4, "goedenavond", "god aften", "good evening", "god kveld"),
        new (5, "school", "skole", "school", "skole"),
    }.AsQueryable();


    PaginationState pagination = new PaginationState { ItemsPerPage = 2 };
}