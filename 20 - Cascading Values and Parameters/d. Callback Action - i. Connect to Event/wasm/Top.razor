<h1>Top</h1>
<CascadingValue Value="color" Name="ColorParameter" IsFixed="false">
    <CascadingValue Value="ChangeColor" Name="ChangeColorParameter">
        <Middle />
        <button @onclick="ChangeColor">Top: Switch color</button>
    </CascadingValue>
</CascadingValue>

@code {
    private string color = "red";

    private void ChangeColor()
    {
        color = (color == "red") ? "blue" : "red";
    }
}
