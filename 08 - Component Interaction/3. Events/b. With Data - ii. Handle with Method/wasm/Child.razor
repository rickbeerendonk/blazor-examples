<input @oninput="HandleChange">

@code {
  // Event
  [Parameter]
  public EventCallback<string> OnChangeCallback { get; set; }

  private Task HandleChange(ChangeEventArgs e)
  {
    return OnChangeCallback.InvokeAsync(e.Value?.ToString() ?? "");
  }
}