<h1>Top</h1>

<!-- Value is automatically databinded -->
<CascadingValue Value="color">
    <Middle />
</CascadingValue>

<CascadingValue Value="color" IsFixed>
    <Middle />
</CascadingValue>

<input @oninput="HandleInput" value="@color" />

@code {
    private string color = "red";

    private void HandleInput(ChangeEventArgs e)
    {
        color = e.Value.ToString();
    }
}
