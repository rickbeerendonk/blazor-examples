@page "/"

<h2>Home</h2>

<AuthorizeView>
    <Authorized>
        <p>Authorized @context.User.Identity?.Name!</p>
        <button @onclick="SecureMethod">Authorized Only Button</button>
    </Authorized>
    <NotAuthorized>
        <p>Not Authorized!</p>
    </NotAuthorized>
</AuthorizeView>


<AuthorizeView Policy="VipMemberPolicy">
    <Authorized>
        <p>VIP!</p>
        <button @onclick="SecureVIPMethod">VIP Only Button</button>
    </Authorized>
</AuthorizeView>

@code {
    private void SecureMethod()
    {
    }

    private void SecureVIPMethod()
    {
    }
}