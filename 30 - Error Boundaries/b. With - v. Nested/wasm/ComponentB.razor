<div style="border: 2px solid green; padding: 10px; margin: 10px 0;">
    <h3>Component B</h3>
    <p style="color: gray">Change to 0 to throw an exception</p>
    <input @onchange="ValueChanged" value="@value" type="number" />
    <p>Result: @Calculate()</p>
</div>

@code {
    private int value = 10;

    private int Calculate()
    {
        return 200 / value;
    }

    private void ValueChanged(ChangeEventArgs e)
    {
        value = int.Parse(e.Value?.ToString() ?? "0");
    }
}
