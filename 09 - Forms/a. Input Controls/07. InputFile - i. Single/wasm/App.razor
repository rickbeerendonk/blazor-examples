<div>
    <label>
        Single file:
        <InputFile OnChange="@HandleChange" />
    </label>
</div>

@if (file != null)
{
    <h4>File</h4>

    <pre style="background: lightblue; margin: 5px">Name: @file.Name
Size: @file.Size
ContentType: @file.ContentType
    </pre>
}

@code {
    private IBrowserFile file;

    private void HandleChange(InputFileChangeEventArgs e)
    {
        file = e.File;
    }
}