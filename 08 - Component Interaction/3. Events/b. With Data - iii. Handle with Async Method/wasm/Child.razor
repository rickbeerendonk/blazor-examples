<input @oninput="HandleChange">

@code {
  // Event
  [Parameter]
  public EventCallback<string> OnChangeCallback { get; set; }

  private async Task HandleChange(ChangeEventArgs e)
  {
    await OnChangeCallback.InvokeAsync(e.Value?.ToString() ?? "");
  }
}