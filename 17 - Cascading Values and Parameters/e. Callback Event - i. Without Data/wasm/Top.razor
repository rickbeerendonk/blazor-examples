<h1>Top</h1>
<CascadingValue Value="color" Name="ColorParameter">
    <CascadingValue TValue="EventCallback" Value="ChangeColorCallback" Name="SwitchColorParameter">
        <Middle />
        <button @onclick="ChangeColor">Top: Switch color</button>
    </CascadingValue>
</CascadingValue>

@code {
    private string color = "red";

    private void ChangeColor()
    {
        color = (color == "red") ? "green" : "red";
    }

    private EventCallback ChangeColorCallback;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        // Thanks to: Anders Stubberup
        ChangeColorCallback = EventCallback.Factory.Create(this, ChangeColor);
    }
}
