<input @oninput="HandleChange" value="@Value">

@code {
  [Parameter]
  public string? Value { get; set; } // Must be "Value" to use with @bind-Value

  [Parameter]
  public EventCallback<string?> ValueChanged { get; set; } // Must be "ValueChanged" to use with @bind-Value

  private Task HandleChange(ChangeEventArgs e) 
    => ValueChanged.InvokeAsync(e.Value?.ToString());
}