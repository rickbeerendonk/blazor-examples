<button @onclick="SwitchColor">Switch color</button>

@code {
    [CascadingParameter(Name = "SwitchColorParameter")]
    private EventCallback ChangeColor { get; set; }

    private void SwitchColor() => ChangeColor.InvokeAsync();
}
