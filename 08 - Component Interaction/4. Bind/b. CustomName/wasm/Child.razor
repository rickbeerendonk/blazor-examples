<input @onchange="HandleChange" value="@CustomName">

@code {
  [Parameter]
  public string? CustomName { get; set; }

  [Parameter]
  public EventCallback<string?> CustomNameChanged { get; set; }

  private void HandleChange(ChangeEventArgs e) => CustomNameChanged.InvokeAsync(e.Value.ToString());
}