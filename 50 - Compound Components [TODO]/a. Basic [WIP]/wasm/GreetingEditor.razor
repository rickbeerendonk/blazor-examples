<!-- Render the child content and pass the state as parameters -->
<ChildContent Context="child">
    @child(name, SetName)
</ChildContent>

@code {
    [Parameter]
    public required RenderFragment ChildContent { get; set; }

    private string name = "World";

    private void SetName(string newName)
    {
        name = newName;
    }
}