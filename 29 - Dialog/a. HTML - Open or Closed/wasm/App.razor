<dialog open="@isClosed">
    <h1>Dialog (Closed)</h1>
    <p>Closed dialog content.</p>
</dialog>

<dialog open="@isOpen">
    <h1>Dialog (Open)</h1>
    <p>Open dialog content.</p>
</dialog>

@code {
    private readonly bool isOpen = true;
    private readonly bool isClosed = false;
}
